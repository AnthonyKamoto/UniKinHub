# Configuration Backend Django
# Copiez ce fichier en .env et modifiez les valeurs selon votre environnement

# Django Settings
SECRET_KEY=django-insecure-changez-cette-cle-secrete-en-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.198

# Base de données
# SQLite est utilisé par défaut pour le développement
# Pour PostgreSQL en production, décommentez les lignes suivantes :
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=unikinhub_db
# DATABASE_USER=postgres
# DATABASE_PASSWORD=votre_mot_de_passe
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# Configuration Email (SMTP)
# Pour Gmail :
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=votre-email@gmail.com
EMAIL_HOST_PASSWORD=votre-mot-de-passe-app-gmail

# Pour d'autres fournisseurs :
# SendGrid :
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=votre-api-key-sendgrid

# Mailgun :
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_HOST_USER=postmaster@votre-domaine.mailgun.org
# EMAIL_HOST_PASSWORD=votre-mot-de-passe-mailgun

# Email par défaut pour les notifications
DEFAULT_FROM_EMAIL=noreply@unikinhub.com

# Configuration des médias
MEDIA_ROOT=media
MEDIA_URL=/media/

# Configuration CORS (pour le frontend)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Configuration des notifications
# Activer/désactiver les notifications email
ENABLE_EMAIL_NOTIFICATIONS=True

# Configuration Firebase (pour les notifications push mobile)
# FIREBASE_SERVER_KEY=votre-cle-serveur-firebase
# FIREBASE_PROJECT_ID=votre-projet-id
